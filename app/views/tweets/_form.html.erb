<%= form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tweet.errors.count, "erros") %> proibiram essa mensagem de ser publicada:</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Cadastrar nova mensagem' %><br />
    <%= f.text_area :tweet %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
