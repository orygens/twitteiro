<% title 'Editando mensagem' %>

<% form_for(@tweet) do |f| %>
  <% if @tweet.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@tweet.errors.count, 'erro') %> impediram esse Tweet de ser salvo:</h2>

      <ul>
      <% @tweet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field'>
    <%= f.label 'Atualizar mensagem' %><br />
    <%= f.text_area :tweet, :id => 'text' %>
    Faltam <span id='countdown'>140</span> Caracteres
  </div>
  
  <div class='actions'>
    <%= f.submit 'Atualizar' %>
  </div>
<% end %>
</div>

<%= link_to 'Voltar', root_path %>
